@model Flatmate.Models.EntityModels.User

<div class="modal fade" id="modalTeamNameChange" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded">
            <!--Header-->
            <div class="h5 modal-header justify-content-center blue">
                <i class="fas fa-angle-double-left mr-2 text-white align-middle"></i>
                Edit team name
                <i class="fas fa-angle-double-right ml-2 text-white align-middle"></i>
            </div>
            <form id="myForm">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        @*TODO: add asp-for classes *@
                        <label>Choose new team name:</label>
                        <input class="form-control" placeholder="New team name..." />
                        <span  class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button class="btn btn-dark" data-dismiss="modal">Close</button>
                    <button id="btnSubmit" type="submit" asp-controller="Teams" asp-action="Create" class="btn btn-dark">Ready!</button>
                </div>
            </form>
        </div>
    </div>
</div>
