@model Flatmate.ViewModels.Scheduler.EventDetails

<div class="modal fade" id="modalEventDetailsShow" tabindex="-1" role="dialog" aria-labelledby="eventDetailsLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded">
            <div id="eventDetailsLabel" class="h5 modal-header blue">
                <div class="justify-content-center text-center align-self-center w-100 ml-5">
                    <i class="fas fa-angle-double-left mr-2 text-white"></i>
                    Event Details
                    <i class="fas fa-angle-double-right ml-2 text-white"></i>
                </div>
                <button id="editEventDetails" type="button" class="btn btn-outline-white btn-rounded btn-sm px-2 mx-2 float-right">
                    <i class="far fa-edit" title="Edit/Review mode"></i>
                </button>
            </div>
            <div class="modal-body">
                <form id="EventDetailsForm" asp-action="EditEventDetails">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Id" type="hidden" />
                    <div class="form-group">
                        <label asp-for="Title" class="control-label">Event title:</label>
                        <input asp-for="Title" class="form-control" disabled />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Event description:</label>
                        <textarea asp-for="Description" class="form-control" disabled></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-check-inline">
                        <label asp-for="IsBlocking" class="control-label">
                            <input asp-for="IsBlocking" type="checkbox" class="my-3 form-check-input" disabled />Block other activities during selected period?
                        </label>
                        <span asp-validation-for="IsBlocking" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label">Event starts at:</label>
                        <div class="input-group date" id="startDateDatetimepicker" data-target-input="nearest">
                            <input asp-for="StartDate" type="text" class="form-control datetimepicker-input" data-target="#startDateDatetimepicker" disabled />
                        </div>
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label">Event ends at:</label>
                        <div class="input-group date" id="endDateDatetimepicker" data-target-input="nearest">
                            <input asp-for="EndDate" type="text" class="form-control datetimepicker-input" data-target="#endDateDatetimepicker" disabled />
                        </div>
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="GroupId" type="hidden" />
                        <label id="groupLabel" asp-for="GroupId" class="control-label">Selected group: @Model.GroupName</label>
                    </div>
                    <div class="mt-3" id="eventParticipantsWrapper">
                        <label>Participants: </label>
                        <ul>
                            @foreach (var pi in Model.ParticipantNames)
                            {
                                <li> > @pi</li>
                            }
                        </ul>
                    </div>
                </form>
            </div>
            <div class="modal-footer justify-content-between">
                <button class="btn btn-dark" data-dismiss="modal">Close</button>
                <button id="eventDeleteBtn" class="btn btn-dark">Delete</button>
            </div>
        </div>
    </div>
</div>