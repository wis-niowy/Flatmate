@model Flatmate.ViewModels.Scheduler.EventDetails;

<div class="modal fade" id="modalNewEventCreate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded">
            <div id="exampleModalLabel" class="h5 modal-header justify-content-center blue">
                <i class="fas fa-angle-double-left mr-2 text-white"></i>
                Create new event!
                <i class="fas fa-angle-double-right ml-2 text-white"></i>
            </div>
            <div class="modal-body">
                <form id="NewEventForm" asp-action="NewEvent">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label">Event title:</label>
                        <input asp-for="Title" class="form-control" placeholder="Your event title..." />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Event description:</label>
                        <textarea asp-for="Description" class="form-control" placeholder="Event description..." />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-check-inline">
                        <label asp-for="IsBlocking" class="control-label">
                            <input asp-for="IsBlocking" type="checkbox" class="my-3 form-check-input" />Block other activities during selected period?
                        </label>
                        <span asp-validation-for="IsBlocking" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label">Event starts at:</label>
                        <div class="input-group date" id="startDateNewEvent" data-target-input="nearest">
                            <input asp-for="StartDate" type="text" class="form-control datetimepicker-input" data-target="#startDateNewEvent" />
                            <div class="input-group-append" data-target="#startDateNewEvent" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label">Event ends at:</label>
                        <div class="input-group date" id="endDateNewEvent" data-target-input="nearest">
                            <input asp-for="EndDate" type="text" class="form-control datetimepicker-input" data-target="#endDateNewEvent" />
                            <div class="input-group-append" data-target="#endDateNewEvent" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="dropdown">
                        <label asp-for="GroupId" class="control-label">Choose team name:</label>
                        <select asp-for="GroupId" id="groupSelect" class="form-control">
                            <option value="" selected disabled hidden>Team name >></option>
                        </select>
                    </div>
                    <div class="mt-3" id="groupMembersWrapper">

                    </div>
                </form>
            </div>
            <div class="modal-footer justify-content-between">
                <button class="btn btn-dark" data-dismiss="modal">Close</button>
                <button id="btnSubmit" type="submit" data-save="modal" class="btn btn-dark">Ready!</button>
            </div>
        </div>
    </div>
</div>
