
<!--Top Table UI-->
<!--Card-->
<div class="m-5 margin-left-0-max-sm card">
    <!--Card header-->
    <div class="view view-cascade py-3 blue lighten-2 mx-4 d-flex justify-content-between align-items-center" style="margin-top:-1rem">
        <div>
            <button type="button" title="Previous week" class="btn btn-outline-white btn-rounded btn-sm px-2 mx-2" onclick="shiftDates(false)">
                <i class="fas fa-angle-double-left mt-0"></i>
            </button>

            <button type="button" title="Next week" class="btn btn-outline-white btn-rounded btn-sm px-2 mx-2" onclick="shiftDates(true)">
                <i class="fas fa-angle-double-right mt-0"></i>
            </button>
        </div>
        <a href="" class="white-text mx-3">Calendar</a>
        <div>
            <button type="button" class="btn btn-outline-white btn-rounded btn-sm px-2 mx-2"
                    data-toggle="modal" data-target="#exampleModal">
                <i class="fas fa-plus mt-0"></i>
            </button>


            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Recipient:</label>
                                    <input type="text" class="form-control" id="recipient-name">
                                </div>
                                <div class="form-group">
                                    <label for="message-text" class="col-form-label">Message:</label>
                                    <textarea class="form-control" id="message-text"></textarea>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Send message</button>
                        </div>
                    </div>
                </div>
            </div>

            <button type="button" class="btn btn-outline-white btn-rounded btn-sm px-2 mx-2">
                <i class="fas fa-info-circle mt-0"></i>
            </button>

        </div>
    </div>
    <!--/Card header-->
    <!--Card content-->
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table id="calendarTable" class="table">
                <thead>
                    <tr id="dateRow"></tr>
                </thead>
                <tbody id="calendarBody"></tbody>
            </table>
        </div>
        <hr class="my-0">
        <!--Bottom Table UI-->
    </div>
</div>

