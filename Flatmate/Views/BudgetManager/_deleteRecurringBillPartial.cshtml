@model Flatmate.ViewModels.BudgetManager.BillingViewModel

<div class="card" id="deleteRBDiv">
    <div class="h5 card-header text-center grey lighten-2">
        <i class="fas fa-angle-double-left mr-2 text-white"></i>
        Confirm delete
        <i class="fas fa-angle-double-right ml-2 text-white"></i>
    </div>
    <div class="card-body">
        <h6 class="text-center">Summary</h6>
        <hr />
        <form id="RemovalShoppingForm" asp-action="DeleteBill">
            <input asp-for="Id" type="hidden" />
            <input asp-for="GroupId" type="hidden" />
            <div class="form-group">
                <label asp-for="Subject" class="font-weight-bold">@Model.Subject</label>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseCategory" class="col-sm-5"><small class="font-weight-bold">Expense category:</small><br /> @Model.ExpenseCategory</label>
                <label asp-for="GroupName" class="col-sm-5"><small class="font-weight-bold">Group:</small><br /> @Model.GroupName</label>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="col-sm-5"><small class="font-weight-bold">Starts:</small><br /> @Model.StartDate</label>
                <label asp-for="ExpirationDate" class="col-sm-5"><small class="font-weight-bold">Expires:</small><br /> @Model.ExpirationDate</label>
            </div>
            <div class="form-group">
                <label asp-for="CreationDate" class="col-sm-5"><small class="font-weight-bold">Created:</small><br /> @Model.CreationDate</label>
                <label asp-for="LastOccurenceDate" class="col-sm-5"><small class="font-weight-bold">Last occurence:</small><br /> @(Model.LastOccurenceDate.HasValue ? Model.LastOccurenceDate.Value.ToString() : "None")</label>
            </div>
            <hr />
            <div class="mt-3" id="groupMembersRBDWrapper">
                <label class="font-weight-bold">Attached users:</label><br />
                @foreach (var pn in Model.ParticipantNames)
                {
                    var participantName = (' ' + pn).ToString();
                    <button class="btn-sm no-inner-padding brown lighten-5 border-0" disabled>
                        @participantName
                    </button>
                }
            </div>
        </form>
    </div>
    <div class="d-flex card-footer justify-content-between">
        <button class="w-50 btn btn-dark" data-dismiss="card">Close</button>
        <button id="btnSubmit" type="submit" data-delete="card" class="w-50 btn btn-dark">Delete</button>
    </div>
</div>