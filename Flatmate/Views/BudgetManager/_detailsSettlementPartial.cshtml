@model Flatmate.ViewModels.BudgetManager.ExpenseDetailsPartialView

<div class="card" id="detailedSettlementDiv">
    <div class="h5 card-header text-center grey lighten-2">
        <i class="fas fa-angle-double-left mr-2 text-white"></i>
        @Model.Subject
        <i class="fas fa-angle-double-right ml-2 text-white"></i>
    </div>
    <div class="card-body">
        <label class="row"><small class="col-md-5 col-11 font-weight-bold">User:</small><br /><text class="col-md-6 col-11">@Model.UserName</text></label>
        <label class="row"><small class="col-md-5 col-11 font-weight-bold">Value:</small><br /><text class="col-md-6 col-11">@Model.Value PLN</text></label>
        <label class="row"><small class="col-md-5 col-11 font-weight-bold">Category:</small><br /><text class="col-md-6 col-11">@Model.ExpenseCategory</text></label>
        <label class="row"><small class="col-md-5 col-11 font-weight-bold">Group:</small><br /><text class="col-md-6 col-11">@Model.GroupName</text></label>
    </div>
    <div class="d-flex card-footer justify-content-center">
        <button class="btn btn-dark" data-dismiss="card">Close</button>
    </div>
</div>