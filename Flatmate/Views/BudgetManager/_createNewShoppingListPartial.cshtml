@model Flatmate.ViewModels.BudgetManager.ShoppingCreateViewModel;
@using Flatmate.Helpers;

<div class="modal fade" id="modalNewShoppingListCreate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded">
            <div id="exampleModalLabel" class="h5 modal-header justify-content-center blue">
                <i class="fas fa-angle-double-left mr-2 text-white"></i>
                Let's do some shopping!
                <i class="fas fa-angle-double-right ml-2 text-white"></i>
            </div>
            <div class="modal-body">
                <form id="NewSLForm" asp-action="NewShoppingList">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Subject" class="font-weight-bold">Title:</label>
                        <input asp-for="Subject" class="form-control" placeholder="Your list title..." />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="dropdown form-group">
                        <label asp-for="ExpenseCategory" class="font-weight-bold">Choose expense category:</label>
                        <select name="ExpenseCategory" id="categorySelect" class="form-control" asp-items="Html.GetEnumSelectList<ExpenseCategory>()">
                            <option value="" selected disabled hidden>Expense category >></option>
                        </select>
                    </div>
                    <div id="singleElementsWrapper" class="form-group overflow-auto mb-2">
                        <label class="mt-2 ml-3 font-weight-bold" style="text-decoration:underline">Items:</label>
                        <div id="singleItemsDiv">
                            <div id="singleItem-0" class="mb-1">
                                <input name="SingleElementTitles" class="form-control form-control-sm col-4 d-inline" placeholder="Title..." />
                                <input name="SingleElementAmounts" class="form-control form-control-sm col-3 d-inline" placeholder="Amount..." />
                                <div class="dropdown d-inline">
                                    <select name="SingleElementUnits" class="form-control form-control-sm col-3 d-inline" asp-items="Html.GetEnumSelectList<Unit>()">
                                        <option value="" selected disabled hidden>Unit</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <button id="addNewSingleElement" class="btn btn-dark btn-sm mr-3" style="float:right">Add item</button>
                    </div>
                    <span asp-validation-for="SingleElementTitles" class="text-danger"></span>
                    <span asp-validation-for="SingleElementAmounts" class="text-danger"></span>
                    <div class="dropdown form-group">
                        <label asp-for="GroupId" class="font-weight-bold">Choose team name:</label>
                        <select asp-for="GroupId" id="groupSCSelect" class="form-control">
                            <option value="" selected disabled hidden>Team name >></option>
                        </select>
                    </div>
                    <div class="mt-3" id="groupMembersSCWrapper">

                    </div>
                </form>
            </div>
            <div class="modal-footer justify-content-between">
                <button class="btn btn-dark" data-dismiss="modal">Close</button>
                <button id="btnSubmit" type="submit" data-save="modal" class="btn btn-dark">Ready!</button>
            </div>
        </div>
    </div>
</div>
