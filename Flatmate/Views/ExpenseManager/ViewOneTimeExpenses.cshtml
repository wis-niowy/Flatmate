@model IEnumerable<Flatmate.ViewModels.ExpenseManager.ExistingSingleExpenseViewModel>

@{
    ViewData["Title"] = "ViewOneTimeExpenses";
}

<h2>ViewOneTimeExpenses</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseSubject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseSubject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseCategory)
            </td>
            <td>
                <a class="btn btn-default" asp-action="EditOneTimeExpense" asp-route-expenseId="@item.ExpenseId">Edit</a>
                |
                @*<a asp-action="Details" asp-route-id="@item.ExpenseId">Details</a> |*@
                <a class="btn btn-danger" asp-action="DeleteOneTimeExpense" asp-route-expenseId="@item.ExpenseId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>