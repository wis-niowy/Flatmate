@using Flatmate.Helpers;
@model Flatmate.ViewModels.ExpenseManager.NewRecurringExpenseViewModel

@{
    ViewData["Title"] = "NewRecurringExpense";
}

<h2>NewRecurringExpense</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="NewRecurringExpense">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BillSubject"></label>
                <input asp-for="BillSubject" class="form-control" />
                <span asp-validation-for="BillSubject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <select asp-for="Frequency"
                    asp-items="Html.GetEnumSelectList<Frequency>()"
                    class="form-control chosen-select">
                <option>Frequency</option>
            </select>
            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <select asp-for="DebitorsCollection"
                    asp-items="@Model.FlatmatesCollection"
                    class="form-control chosen-select" multiple="multiple">
                <option>Please select debitors</option>
            </select>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}